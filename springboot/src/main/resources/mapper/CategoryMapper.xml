<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.aki.mapper.CategoryMapper">

    <insert id="insert" parameterType="com.aki.entity.Category">
        insert into category(name) values (#{name})
    </insert>

    <update id="updateById" parameterType="com.aki.entity.Category">
        update category set name = #{name}
        where id = #{id}
    </update>

    <delete id="deleteById" parameterType="java.lang.Integer">
        delete from category where id = #{id}
    </delete>

    <select id="selectAll" resultType="com.aki.entity.Category">
        select * from category
        <where>
            <if test="name != null">and name like concat('%', #{name}, '%')</if>
        </where>
        order by id desc
    </select>

</mapper>